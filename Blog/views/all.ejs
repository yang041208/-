<!DOCTYPE html>
<html lang="en">
<head>
  <title>Blog</title>
  <link rel="stylesheet" type="text/css" href="/css/bootstrap.min.css" />
</head>
<body>
  <div class="container">
    <h1 class="mb-4">Articles</h1>
        <a href="/new/<%= userid %>" class="btn btn-success">New Article</a>
    
    <% yzns.forEach(yzn => { %>
    <div class="card mt-4">
        <div class="card-body">
        <h4 class="card-title"><%= yzn.title %></h4>
        <div class="card-subtitle text-muted mb-2">
            <%= yzn.createdAt.toLocaleDateString() %>
          </div>
        <div class="card-text mb-2"><%= yzn.description %></div>
        <a href="/readmore/<%= userid %>/<%= yzn._id %>" class="btn btn-primary">Read More</a>
        <a href="/edit/<%= yzn._id %>" class="btn btn-info">Edit</a>
        <form action="/<%= userid %>/<%= yzn._id %>?_method=DELETE" method="POST" class="d-inline">
            <button type="submit" class="btn btn-danger">Delete</button>
        </form>   
         </div>
      </div>
    <% }) %>
    </div>
</body>
</html>